IMPLEMENTATION copyIMP_OC_NONDET_MCH_WHILEINSIDE
REFINES copyNONDET_MCH_WHILE
    
IMPORTS copyDET_MCH_WHILE

OPERATIONS
    res <-- opNONDET_MCH_WHILE(xx) =
    BEGIN
        VAR ii IN
            ii := 0;
            res := ii;
            WHILE ii < xx DO
                res <-- opDET_MCH_WHILE(xx);
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= xx & (ii = 0 => res = 0) & (not(ii = 0) => res = xx)
            VARIANT xx - ii
            END
        END
    END

 END