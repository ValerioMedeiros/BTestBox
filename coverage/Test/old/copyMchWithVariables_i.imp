IMPLEMENTATION copyMchWithVariables_i
REFINES copyMchWithVariables

VALUES
    max_count = 10

CONCRETE_VARIABLES
    countImp //Just a comment to see if I appear
    
INVARIANT
    countImp : NAT & countImp <= max_count & countImp = count
    
INITIALISATION
    countImp := 0

OPERATIONS
    GetcountImpForTest <-- OperationForTestGetcountImp = 
        GetcountImpForTest := countImp;

    SetVariablesForTest(nn1) = 
    BEGIN
        countImp := nn1
    END;

    res <-- opIncCount(nn) =
    BEGIN
        VAR aux IN
            aux := countImp + nn;
            IF aux < max_count THEN
                res := 1;
                countImp := countImp + nn
            ELSE
                res := 0
            END
        END
    END
    ;
    res <-- opRelease(nn) =
    BEGIN
        VAR aux IN
            aux := countImp - nn;
            IF aux < 0 THEN
                res := 0
            ELSE
                res := 1; countImp := countImp - nn
            END
        END
    END;
    
    resetCount = countImp := 0;
    
    res <-- getCount = res := countImp
 END