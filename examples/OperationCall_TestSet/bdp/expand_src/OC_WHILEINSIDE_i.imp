IMPLEMENTATION OC_WHILEINSIDE_i
REFINES OC_WHILEINSIDE

IMPORTS
    DET_MCH_WHILE

OPERATIONS
    res1 , res2 <-- opOC_WHILEINSIDE ( xx , yy ) =
    BEGIN
        VAR ii IN
            ii := 0 ;
            res1 := ii ;
            WHILE ii < xx DO
                res1 <-- opDET_MCH_WHILE ( xx ) ;
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= xx & ( ii = 0 => res1 = 0 ) & ( not ( ii = 0 ) => res1 = xx )
            VARIANT xx - ii
            END ;
            ii := 0 ;
            res2 := ii ;
            WHILE ii < yy DO
                res2 <-- opDET_MCH_WHILE ( yy ) ;
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= yy & ( ii = 0 => res2 = 0 ) & ( not ( ii = 0 ) => res2 = yy )
            VARIANT yy - ii
            END
        END
    END

 END
