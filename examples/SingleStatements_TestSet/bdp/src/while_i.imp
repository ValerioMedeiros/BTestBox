IMPLEMENTATION while_i
REFINES while

OPERATIONS
    res <-- opwhile ( xx ) =
    BEGIN
        VAR ii IN
            ii := 0 ;
            WHILE ii < xx DO
                ii := ii + 1
            INVARIANT ii >= 0 & ii <= xx
            VARIANT xx - ii
            END ;
            res := ii
        END
    END

 END
