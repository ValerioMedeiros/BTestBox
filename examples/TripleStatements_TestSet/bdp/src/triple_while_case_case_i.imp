IMPLEMENTATION triple_while_case_case_i
REFINES triple_while_case_case

OPERATIONS
    res1 , res2 , res3 <-- optriple_while_case_case ( xx , yy , zz ) =
    BEGIN
        VAR ii IN
            ii := 0 ;
            res1 := ii ; res2 := yy ; res3 := zz ;
            WHILE ii < xx DO
                CASE yy OF
                    EITHER 0 THEN
                        CASE zz OF
                            EITHER 0 THEN
                                res1 := ii + 1 ; res2 := yy ; res3 := zz
                            OR 1 THEN
                                res1 := ii + 1 ; res2 := yy ; res3 := zz
                            ELSE
                                res1 := ii + 1 ; res2 := yy ; res3 := zz
                            END
                        END
                    OR 1 THEN
                        CASE zz OF
                            EITHER 0 THEN
                                res1 := ii + 1 ; res2 := yy ; res3 := zz
                            OR 1 THEN
                                res1 := ii + 1 ; res2 := yy ; res3 := zz
                            ELSE
                                res1 := ii + 1 ; res2 := yy ; res3 := zz
                            END
                        END
                    ELSE
                        CASE zz OF
                            EITHER 0 THEN
                                res1 := ii + 1 ; res2 := yy ; res3 := zz
                            OR 1 THEN
                                res1 := ii + 1 ; res2 := yy ; res3 := zz
                            ELSE
                                res1 := ii + 1 ; res2 := yy ; res3 := zz
                            END
                        END
                    END
                END ;
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= xx & res1 = ii & res2 = yy & res3 = zz
            VARIANT xx - ii
            END
        END
    END
END
