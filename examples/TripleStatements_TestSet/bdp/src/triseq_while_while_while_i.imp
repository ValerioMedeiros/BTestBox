IMPLEMENTATION triseq_while_while_while_i
REFINES triseq_while_while_while

OPERATIONS
    res1 , res2 , res3 <-- optriseq_while_while_while ( xx ) =
    BEGIN
        VAR ii IN
            ii := 0 ;
            WHILE ii < xx DO
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= xx
            VARIANT xx - ii
            END ;
            res1 := ii ;
            ii := 0 ;
            WHILE ii < xx DO
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= xx
            VARIANT xx - ii
            END ;
            res2 := ii ;
            ii := 0 ;
            WHILE ii < xx DO
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= xx
            VARIANT xx - ii
            END ;
            res3 := ii
        END
    END

 END
