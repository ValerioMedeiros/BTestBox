IMPLEMENTATION triple_case_while_else_i
REFINES triple_case_while_else

OPERATIONS
    res1 , res2 , res3 <-- optriple_case_while_else ( xx , yy , zz ) =
    BEGIN
        VAR ii IN
            ii := 0 ;
            res1 := xx ; res2 := ii ;
            IF zz < 5 THEN
                res3 := 0
            ELSE
                res3 := zz
            END ;
            CASE xx OF
                EITHER 0 THEN
                    WHILE ii < yy DO
                        IF zz < 5 THEN
                            res1 := xx ; res2 := ii + 1 ; res3 := 0
                        ELSE
                            res1 := xx ; res2 := ii + 1 ; res3 := zz
                        END ;
                        ii := ii + 1
                    INVARIANT 0 <= ii & ii <= yy & res1 = xx & ( zz < 5 => res3 = 0 ) & ( not ( zz < 5 ) => res3 = zz ) & res2 = ii
                    VARIANT yy - ii
                    END
                OR 1 THEN
                    WHILE ii < yy DO
                        IF zz < 5 THEN
                            res1 := xx ; res2 := ii + 1 ; res3 := 0
                        ELSE
                            res1 := xx ; res2 := ii + 1 ; res3 := zz
                        END ;
                        ii := ii + 1
                    INVARIANT 0 <= ii & ii <= yy & res1 = xx & ( zz < 5 => res3 = 0 ) & ( not ( zz < 5 ) => res3 = zz ) & res2 = ii
                    VARIANT yy - ii
                    END
                ELSE
                    WHILE ii < yy DO
                        IF zz < 5 THEN
                            res1 := xx ; res2 := ii + 1 ; res3 := 0
                        ELSE
                            res1 := xx ; res2 := ii + 1 ; res3 := zz
                        END ;
                        ii := ii + 1
                    INVARIANT 0 <= ii & ii <= yy & res1 = xx & ( zz < 5 => res3 = 0 ) & ( not ( zz < 5 ) => res3 = zz ) & res2 = ii
                    VARIANT yy - ii
                    END
                END
            END
        END
    END

 END
