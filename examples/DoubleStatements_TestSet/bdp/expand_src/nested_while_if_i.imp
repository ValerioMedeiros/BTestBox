IMPLEMENTATION nested_while_if_i
REFINES nested_while_if

OPERATIONS
    res1 , res2 <-- opnested_while_if ( xx , yy ) =
    BEGIN
        VAR ii IN
            ii := 0 ;
            IF yy < 5 THEN
                res2 := 0
            END ;
            WHILE ii < xx DO
                IF yy < 5 THEN
                    res2 := 0
                END ;
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= xx & ( yy < 5 => res2 = 0 )
            VARIANT xx - ii
            END ;
            res1 := ii
        END
    END
END
