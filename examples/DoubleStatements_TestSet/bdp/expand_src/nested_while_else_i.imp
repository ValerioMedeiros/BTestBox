IMPLEMENTATION nested_while_else_i
REFINES nested_while_else

OPERATIONS
    res1 , res2 <-- opnested_while_else ( xx , yy ) =
    BEGIN
        VAR ii IN
            ii := 0 ;
            IF yy < 5 THEN
                res2 := 0
            ELSE
                res2 := yy
            END ;
            WHILE ii < xx DO
                IF yy < 5 THEN
                    res2 := 0
                ELSE
                    res2 := yy
                END ;
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= xx & ( yy < 5 => res2 = 0 ) & ( not ( yy < 5 ) => res2 = yy )
            VARIANT xx - ii
            END ;
            res1 := ii
        END
    END

 END
