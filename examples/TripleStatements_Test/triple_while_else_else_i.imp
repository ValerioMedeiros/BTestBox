IMPLEMENTATION triple_while_else_else_i
REFINES triple_while_else_else

OPERATIONS
    res1, res2, res3 <-- optriple_while_else_else(xx, yy, zz)=
    BEGIN
        VAR ii IN
            ii := 0;
            res1 := ii;
            IF yy < 5 THEN
                res2 := 0
            ELSE
                res2 := yy
            END;
            IF zz < 5 THEN
                res3 := 0
            ELSE
                res3 := zz
            END;
            WHILE ii < xx DO
                IF yy < 5 THEN
                    res2 := 0;
                    IF zz < 5 THEN
                        res3 := 0
                    ELSE
                        res3 := zz
                    END
                ELSE
                    res2 := yy;
                    IF zz < 5 THEN
                        res3 := 0
                    ELSE
                        res3 := zz
                    END
                END;
                res1 := ii + 1;
                ii := ii + 1
            INVARIANT 0 <= ii & ii <= xx & res1 = ii & (yy < 5 => res2 = 0) & (not(yy < 5) => res2 = yy) & (zz < 5 => res3 = 0) & (not(zz < 5) => res3 = zz)
            VARIANT xx - ii
            END
        END
    END

 END